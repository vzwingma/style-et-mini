{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl" : ".",
    "paths": {
      "@/*"       : [ "./*"],
      "@/app/*"   : [ "app/*" ],
      "@/hooks/*" : [ "hooks/*" ],
      "@/assets/*": [ "assets/*" ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
